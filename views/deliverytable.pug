meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Delivery Table
link(rel="stylesheet", href="/CSS/deliverytable.css")

// Navigation Bar 
nav.navbar
  ul
    li
      a(href="/stock") Stock
    li
      a(href="/stocktable") Stocklist 
    li
      a(href="/delivery") Delivery
    li
      a(href="/deliverylist") Deliverylist 

.container
  h1 Delivery Management
  table#deliveryTable
    thead
      tr
        th Customer Name
        th Delivery Address
        th Product Name
        th Quantity
        th Payment Method
        th Base Price
        th Transport Fee
        th Total Price
        th Delivery Status
    tbody
      each delivery in deliveries
        tr
          td= delivery.customerName
          td= delivery.customerAddress
          td= delivery.productName
          td= delivery.quantity
          td= delivery.paymentType
          td= delivery.basePrice
          td= delivery.transport ? "Yes" : "No"
          td= delivery.totalPrice
          td= delivery.deliveryStatus

  button(onclick="addSampleDelivery()") Add Sample Delivery

script(src="/JS/delivery.js")
