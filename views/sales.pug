meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title MWF Sales Page
link(rel="stylesheet", href="/CSS/sales.css")

nav.navbar

  ul
    li
      a(href="/sales") Sales
    li
      a(href="/salestable") Stocklist
    li
      a(href="/stock") Stock
    li
      a(href="/stocktable") Stocklist
    li
      a(href="/delivery") Delivery
    li
      a(href="/deliverytable") Deliverylist

.container
  h1 Record a Sale
  form(action="/sales", method="POST")
    // Customer Name
    label(for="customerName") Customer Name
    input#customerName(type="text", name="customerName", required)

    // Product Type
    label(for="productType") Product Type
    select#productType(name="productType", required)
      option(value) -- Select Type --
      option(value="wood") Wood
      option(value="furniture") Furniture

    // Product Name (from stock)
    label(for="stockId") Product
    select#stockId(name="stockId", required)
      option(value) -- Select Product --
      each stock in stocks
        option(value=stock._id) #{stock.productName} (Available: #{stock.quantity})

    // Quantity
    label(for="quantity") Quantity
    input#quantity(type="number", name="quantity", min="1", required)

    // Quality
    label(for="quality") Quality
    select#quality(name="quality", required)
      option(value) -- Select Quality --
      option(value="high") High
      option(value="medium") Medium
      option(value="low") Low

    // Cost Price
    label(for="costPrice") Cost Price (per unit)
    input#costPrice(type="number", name="costPrice", min="0", step="0.01", required)

    // Transport Fee
    .checkbox
      input#transportCheck(type="checkbox", name="transportCheck")
      label(for="transportCheck") Add 5% Transport Fee

    // Payment Method
    label(for="paymentMethod") Payment Method
    select#paymentMethod(name="paymentMethod", required)
      option(value) -- Select Payment Method --
      option(value="cash") Cash
      option(value="cheque") Cheque
      option(value="bank-overdraft") Bank Overdraft

    // Submit
    button.btn(type="submit") Add Sale

