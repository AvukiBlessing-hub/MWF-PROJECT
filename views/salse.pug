meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title MWF Ltd - Sales Page
link(rel="stylesheet", href="/css/sales.css")
header
  h1 MWF Ltd - Sales Entry
main
  section.sales-form
    h2 Record a Sale
    form#salesForm
      label Product
      select#product(required)
        option(value) -- Select Product --
        option(value="Chairs") Chairs
        option(value="Beds") Beds
        option(value="Wooden Table") Wooden Table
        option(value="Timber") Timber
        option(value="Poles") Poles
        option(value="Office Chair") Office Chair
      label Type
      select#type(required)
        option(value="Wood") Wood
        option(value="Furniture") Furniture
      label Quality
      input#quality(type="text", required)
      label Quantity
      input#quantity(type="number", min="1", value="1", required)
      label Cost Price (per unit)
      input#costPrice(type="number", min="0", required)
      label Total Amount
      input#totalAmount(type="text", readonly)
      | 
//- 
      label Sales Agent
      | 
//- 
      input#agent(type="text", required)
      button(type="submit") Add Sale
script(src="sales.js")