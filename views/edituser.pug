meta(charset="UTF-8")
meta(name="viewport", content="width=device-width, initial-scale=1")
title Edit User
link(rel="stylesheet", href="/CSS/signup.css")

.container
  h2 Edit User Account

  if foundUser
    form(action=`/edituser/${foundUser._id}`, method="post")
      // Full Name
      label(for="fullname") Full Name
      input#fullname(type="text", name="fullname", value=foundUser.fullname, required)
      #nameError.error

      // Email
      label(for="email") Email Address
      input#email(type="email", name="email", value=foundUser.email, required)
      #emailError.error

      // Password
      label(for="password") Password
      input#password(type="password", name="password", value=foundUser.password, required)
      #passError.error

      // Role
      label(for="role") Role
      select#role(name="role", required)
        option(value="") Select a role
        option(value="Manager", selected=foundUser.role === "Manager") Manager
        option(value="Attendant", selected=foundUser.role === "Attendant") Attendant

      // Submit
      button(type="submit") Update User

  else
    p.error(style="color:red") Error: User data not found.

  p
    //- | Already have an account?
    //- a(href="/signin") Sign in

script(src="/signup.js")
