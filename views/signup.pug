doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Signup Page
    link(rel="stylesheet", href="/CSS/signup.css")
    //- link(rel="stylesheet", href="/CSS/navbar.css")

  body
    .container
      h2 Create an Account

      form(action="/signup", method="post")
        // Full Name
        .form-group
          label(for="fullname") Full Name
          input#fullname(type="text", name="fullname", required, placeholder="Enter your full name")
          #nameError.error

        // Email
        .form-group
          label(for="email") Email Address
          input#email(type="email", name="email", required, placeholder="Enter your email")
          #emailError.error

        // Password
        .form-group
          label(for="password") Password
          input#password(type="password", name="password", required, placeholder="Enter your password")
          #passError.error

        // Role
        .form-group
          label(for="role") Role
          select#role(name="role", required)
            option(value="") -- Select Role --
            option(value="Manager") Manager
            option(value="Attendant") Attendant

        // Submit
        .form-group
          button.btn(type="submit") Sign Up

      p
        | Already have an account?
        a(href="/signin") Sign in

    script(src="/js/signup.js")
