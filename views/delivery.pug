meta(charset="UTF-8")
meta(name="viewport", content="width=device-width, initial-scale=1")
title Add Delivery
link(rel="stylesheet", href="/CSS/delivery.css")

nav.navbar
  ul
    li
      a(href="/stock") Stock
    li
      a(href="/stocklist") Stocklist
    li
      a(href="/deliverylist") Deliverylist

.container
  h1 Add Delivery

  if sales.length
    .delivery-board
      each sale in sales
        .delivery-card
          h3= sale.customerName
          p
            strong Product: 
            | #{sale.productName}
          p
            strong Quantity: 
            | #{sale.quantity}
          p
            strong Payment: 
            | #{sale.paymentMethod}

          form(action="/delivery", method="post")
            input(type="hidden", name="saleId", value=sale._id)

            .form-group
              input(type="checkbox", name="transport", id="transport-" + sale._id)
              label(for="transport-" + sale._id) Transport Fee 5%

            .form-group
              label(for="status-" + sale._id) Delivery Status
              select(name="deliveryStatus", id="status-" + sale._id, required)
                option(value="pending") Pending
                option(value="dispatched") Dispatched
                option(value="delivered") Delivered

            button(type="submit") Add Delivery
  else
    p No sales available to create delivery.
