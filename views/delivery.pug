meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title MWF Delivery Page
link(rel="stylesheet", href="/CSS/delivery.css")

// Navigation Bar
nav.navbar
  ul
    li
      a(href="/stock") Stock
    li
      a(href="/stocktable") Stocklist
    li
      a(href="/delivery") Delivery
    li
      a(href="/deliverylist") Deliverylist

.container
  h1 Delivery Management

  form(action="/delivery", method="POST") 
    label Customer Name
    input(name="customerName", id="customerName", type="text", placeholder="Enter customer name", required)

    label Delivery Address
    input(name="customerAddress", id="customerAddress", type="text", placeholder="Enter address", required)

    label Product / Sale
    select(name="saleId", required)   //  link to sale
      each sale in sales
        option(value=sale._id)= `${sale.productName} - ${sale.customerName}`

    label Quantity
    input(name="quantity", id="quantity", type="number", value=1, min=1, required)

    label Payment Method
    select(name="paymentMethod", id="paymentType", required)
      option(value="cash") Cash
      option(value="cheque") Cheque
      option(value="overdraft") Bank Overdraft

    .checkbox
      input(type="checkbox", name="transport", id="transport")
      label(for="transport") Add 5% Transport Fee

    label Delivery Status
    select(name="deliveryStatus", id="deliveryStatus")
      option(value="pending") Pending
      option(value="dispatched") Dispatched
      option(value="delivered") Delivered

    button(type="submit")  submit form

  p.status#statusMessage

script(src="/js/delivery.js")
