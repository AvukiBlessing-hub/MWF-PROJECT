.container
  h1 Add Delivery

  if sales.length
    table.delivery-table
      thead
        tr
          th Customer Name
          th Product
          th Quantity
          th Payment Method
          th Transport Fee (5%)
          th Delivery Status
          th Action
      tbody
        each sale in sales
          tr
            td= sale.customerName
            td= sale.productName
            td= sale.quantity
            td= sale.paymentMethod
            td
              input(type="checkbox", name="transport", id="transport-" + sale._id, form="form-" + sale._id)
              label(for="transport-" + sale._id) Apply
            td
              select(name="deliveryStatus", id="status-" + sale._id, form="form-" + sale._id, required)
                option(value="pending") Pending
                option(value="dispatched") Dispatched
                option(value="delivered") Delivered
            td
              form(id="form-" + sale._id, action="/delivery", method="post", class="delivery-form")
                input(type="hidden", name="saleId", value=sale._id)
                button(type="submit", class="btn-submit") Add Delivery
  else
    p No sales available to create delivery.
